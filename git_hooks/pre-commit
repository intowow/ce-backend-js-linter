#!/bin/bash

GIT_HOME=`git rev-parse --show-toplevel`

# Find modified files
DIFF_FILES=($(git diff --cached --name-only --diff-filter=ACM | grep ".js$"))
if [[ "$DIFF_FILES" = "" ]]; then
  # No js files to be checked.
  exit 0
fi

# Jump to git root dir
pushd ${GIT_HOME}


localEslint=$(find -path "*/eslint-config-i2w-backend-base/node_modules/.bin/eslint" -print -quit)
# Is eslint installed?
which $localEslint > /dev/null
if [ $? -ne 0 ];
then
  echo -e "\033[41;37mPlease install ESLint:\033[0m"
  echo "Cannot Find ESLint .bin in eslint-config-i2w-backend-base, Something Wrong with dependencies"
  exit 1
fi

localEslintrc=$(find -name .eslintrc.yaml)

# Run ESLint
$localEslint -c $localEslintrc "${DIFF_FILES[@]}"
ESLINT_EXIT="$?"

# Back to original dir
popd

# ESLint result
if [[ "${ESLINT_EXIT}" == 0 ]];
then
  echo -e "\033[31mCOMMIT SUCCEEDED\033[0m"
else
  echo -e "\033[41;37mCOMMIT NOT ALLOWED:\033[0m Please fix ESLint errors."
  exit 1
fi

exit $?